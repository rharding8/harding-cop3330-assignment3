@startuml
'https://plantuml.com/class-diagram

class Application {
    Scanner input
    main()
    readNewName()
}

class FileEditor {
    -File inputFile
    -String dir
    -String[] unsavedFile
    +FileEditor()
    +setInputFile
    +setUnsavedFile
    +replaceInFile()
    +writeToFile()
}

class FileIO {
    -File inputFile
    +setInputFile()
    +closeInput()
    +readFromFile()
    +writeToFile()
}

FileIO <|-- FileEditor

@enduml